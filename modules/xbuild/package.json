{
  "$schema": "https://json.schemastore.org/package",
  "name": "@oceancommon/xbuild",
  "version": "1.0.1",
  "description": "@oceancommon/xbuild",
  "main": "dist/cli.js",
  "typings": "dist/types/index.d.ts",
  "type": "commonjs",
  "files": [
    "bin",
    "dist",
    "README.md"
  ],
  "bin": {
    "xbuild": "./bin/xbuild.js"
  },
  "keywords": [
    "ocean",
    "xbuild"
  ],
  "author": "OceanCommon",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "version": "node ../../scripts/version.js",
    "check": "tsc --noEmit",
    "build": "npm run clean && npm run check && vite build -c ./vite.config.ts",
    "release": "pnpm run build && pnpm run version --patch && pnpm publish --no-git-checks",
    "unrel": "pnpm unpublish --force",
    "rel": "pnpm publish",
    "dev": "pnpm run -r --filter=./example build"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.21.0",
    "@rollup/plugin-babel": "^6.0.4",
    "chalk": "^5.4.1",
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "esbuild": "^0.18.0",
    "express": "^4.18.2",
    "rollup": "^4.43.0",
    "tslib": "^2.8.1",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-dev-middleware": "^6.1.0"
  }
}
