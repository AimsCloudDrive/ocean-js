{
  "$schema": "https://json.schemastore.org/package",
  "name": "@msom/xbuild",
  "version": "1.0.5",
  "description": "@msom/xbuild",
  "main": "dist/index.js",
  "typings": "dist/types/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "src",
    "bin",
    "README.md"
  ],
  "bin": {
    "xbuild": "./bin/xbuild.js"
  },
  "keywords": [
    "msom",
    "xbuild"
  ],
  "author": "msom",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "version": "node ../../scripts/version.js",
    "check": "tsc --noEmit",
    "compile": "xbuild build -C",
    "build::vite": "pnpm run clean && vite build -c ../../vite.config.ts",
    "build": "xbuild build",
    "release": "pnpm run build && pnpm run version --patch && pnpm publish --no-git-checks",
    "dev": "pnpm run compile && pnpm run --filter=./example dev"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/core": "latest",
    "@babel/generator": "latest",
    "@babel/parser": "latest",
    "@babel/traverse": "latest",
    "@msom/common": "workspace:^",
    "@msom/http": "workspace:^",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jsdom": "^21.1.7",
    "autoprefixer": "^10.4.21",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "jsdom": "^26.1.0",
    "less": "^4.4.0",
    "postcss": "^8.5.6",
    "rolldown": "1.0.0-beta.29",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "ts-node": "^10.9.2"
  }
}
