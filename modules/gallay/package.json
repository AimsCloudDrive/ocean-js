{
  "$schema": "https://json.schemastore.org/package",
  "name": "@oceancommon/gallay",
  "version": "0.0.1",
  "description": "@oceancommon/gallay",
  "main": "dist/index.js",
  "typings": "dist/types/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "ocean",
    "gallay"
  ],
  "author": "OceanCommon",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "version": "node ../../scripts/version.js",
    "check": "tsc --noEmit",
    "build": "npm run clean && npm run check && vite build -c ../../vite.config.ts",
    "release": "pnpm run build && pnpm run version --patch && pnpm publish --no-git-checks",
    "unrel": "pnpm unpublish --force",
    "rel": "pnpm publish"
  },
  "devDependencies": {
    "@ocean/common": "workspace:*",
    "@ocean/dom": "workspace:*",
    "@ocean/component": "workspace:*",
    "@ocean/reaction": "workspace:*"
  }
}
